<%- include("partials/head", { title: "Danışman - Destiny Timeline" }) %>
<%- include("partials/nav") %>

<header class="hero">
  <div class="container">
    <div class="hero-box">
      <h1 class="hero-title">Danışman</h1>
      <p class="hero-sub">Soru sor, Yapay Zeka cevap versin ve hesabına kaydedilsin.</p>
    </div>
  </div>
</header>

<main class="container py-5">
  <div class="row g-3">

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">DANIŞMAN</div>
          <h2 class="h5 mt-2">Soru Sor</h2>

          <form id="advisorForm" class="mt-3">
            <label class="form-label" for="question">Sorun / Konu</label>
            <textarea class="form-control" id="question" rows="6" placeholder="Örn: Ders çalışmayı nasıl planlamalıyım?" required></textarea>

            <div class="d-flex gap-2 mt-3">
              <button type="submit" class="btn btn-outline-light">Sor ve Kaydet</button>
              <button type="button" id="refreshBtn" class="btn btn-soft">Yenile</button>
            </div>
          </form>

          <div class="divider my-4"></div>

          <h3 class="h6">Yapay Zekanın Cevabı</h3>
          <div id="answerBox" class="text-muted2 mt-2">
            Burada cevap görünecek...
          </div>

        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">GEÇMİŞ</div>
          <h2 class="h5 mt-2">Kayıtlarım</h2>
          <div id="recordsBox" class="mt-3">
          </div>
        </div>
      </div>
    </div>

  </div>
</main>

<script src="/static/js/advisor.js"></script>
<%- include("partials/footer") %>
