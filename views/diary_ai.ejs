<%- include("partials/head", { title: "Günlük - Destiny Timeline" }) %>
<%- include("partials/nav") %>

<header class="hero">
  <div class="container">
    <div class="hero-box">
      <h1 class="hero-title">Günlük</h1>
      <p class="hero-sub">Günlüğünü yaz, Yapay Zeka tavsiye versin ve kaydedilsin.</p>
    </div>
  </div>
</header>

<main class="container py-5">
  <div class="row g-3">

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">GÜNLÜK</div>
          <h2 class="h5 mt-2">Günlük Yaz</h2>

          <form id="diaryForm" class="mt-3">
            <label class="form-label" for="diaryText">Bugün ne oldu?</label>
            <textarea class="form-control" id="diaryText" rows="7" placeholder="Bugün..." required></textarea>

            <div class="d-flex gap-2 mt-3">
              <button type="submit" class="btn btn-outline-light">Kaydet ve Öneri Al</button>
              <button type="button" id="refreshBtn" class="btn btn-soft">Yenile</button>
            </div>
          </form>

          <div class="divider my-4"></div>

          <h3 class="h6">Yapay Zeka Önerisi</h3>
          <div id="aiAnswer" class="text-muted2 mt-2">Burada öneri görünecek...</div>

        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">GEÇMİŞ</div>
          <h2 class="h5 mt-2">Kayıtlarım</h2>
          <div id="diaryList" class="mt-3">
            <!-- Kayıtlar JS ile doldurulur -->
          </div>
        </div>
      </div>
    </div>

  </div>
</main>

<script src="/static/js/diary-ai.js"></script>
<%- include("partials/footer") %>
