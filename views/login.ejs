<%- include("partials/head", { title: "Giriş Yap - Destiny Timeline" }) %>
<style>
  body { overflow: hidden; height: 100vh; display: flex; flex-direction: column; }
</style>
<%- include("partials/nav", { hideMenu: true }) %>

<div style="flex: 1; display: flex; flex-direction: column; overflow: hidden; min-height: 0;">
<main class="container py-3" style="flex: 1; display: flex; align-items: center; min-height: 0;">
  <div class="row justify-content-center w-100">
    <div class="col-md-6 col-lg-5">
      <div class="card card-app">
        <div class="card-body p-4">
          <div class="card-tag">GİRİŞ</div>
          <h1 class="h4 mt-3 mb-3">Giriş Yap</h1>

          <form id="loginForm">
            <div class="mb-3">
              <label class="form-label" for="email">E-posta</label>
              <input class="form-control" type="email" id="email" placeholder="ornek@mail.com" required>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Şifre</label>
              <input class="form-control" type="password" id="password" placeholder="••••••••" required>
            </div>

            <div id="msg" class="mt-2"></div>

            <div class="d-flex gap-2 mt-3">
              <button type="submit" class="btn btn-outline-light">Giriş Yap</button>
              <a href="/register" class="btn btn-soft">Kayıt Ol</a>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>
</main>

<script src="/static/js/login.js"></script>
<%- include("partials/footer") %>
</div>

