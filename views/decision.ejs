<%- include("partials/head", { title: "Karar - Destiny Timeline" }) %>
<%- include("partials/nav") %>

<header class="hero">
  <div class="container">
    <div class="hero-box">
      <h1 class="hero-title">Karar Yardımcısı</h1>
      <p class="hero-sub">Arada kaldığın kararlar için Yapay Zeka önerisi al ve kaydet.</p>
    </div>
  </div>
</header>

<main class="container py-5">
  <div class="row g-3">

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">KARAR</div>
          <h2 class="h5 mt-2">Kararını Yaz</h2>

          <form id="decisionForm" class="mt-3">
            <label class="form-label" for="decisionText">Karar / Problem</label>
            <textarea class="form-control" id="decisionText" rows="7" placeholder="Örn: Final mi vize mi çalışayım?" required></textarea>

            <div class="d-flex gap-2 mt-3">
              <button type="submit" class="btn btn-outline-light">Öneri Al ve Kaydet</button>
              <button type="button" id="refreshBtn" class="btn btn-soft">Yenile</button>
            </div>
          </form>

          <div class="divider my-4"></div>

          <h3 class="h6">Yapay Zeka Önerisi</h3>
          <div id="decisionAnswer" class="text-muted2 mt-2">Burada öneri görünecek...</div>

        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card card-app h-100">
        <div class="card-body">
          <div class="card-tag">GEÇMİŞ</div>
          <h2 class="h5 mt-2">Kayıtlarım</h2>
          <div id="decisionList" class="mt-3">
          </div>
        </div>
      </div>
    </div>

  </div>
</main>

<script src="/static/js/decision.js"></script>
<%- include("partials/footer") %>
